<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="110dp"
    android:paddingTop="5dp"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/item_layout_recommend_person_background"
    android:layout_height="match_parent">
    <com.huoshan.www.view.CircleImageView
        android:id="@+id/item_recommend_person_iv_image"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <TextView
        android:id="@+id/item_recommend_person_tv_name"
        android:layout_marginTop="5dp"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"
        android:text="中英混合小姐妹"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#8a8a8a"
        android:layout_marginTop="3dp"
        android:textSize="8dp"
        android:text="可能感兴趣的人"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="关注"
        android:textSize="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/header_layout_follow_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>