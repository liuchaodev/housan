<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    >

    <RelativeLayout
        android:id="@+id/ll_up"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_conner_share_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.95"
            android:gravity="center"
            android:padding="5dp"
            android:text="  "
            android:textColor="#666666"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/popListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|left"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dialog_share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:src="@mipmap/share_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="微信好友"
                    android:textColor="#2a2a2a"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_share_wx_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:src="@mipmap/share_wxcircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="微信朋友圈"
                    android:textColor="#2a2a2a"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:src="@mipmap/share_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#2a2a2a"
                    android:text="QQ好友"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_share_q_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:src="@mipmap/share_qzone" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="QQ空间"
                    android:textColor="#2a2a2a"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_up"
        android:layout_marginTop="10dp"
        android:alpha="0.95"
        android:gravity="center"
        android:padding="5dp"
        android:text="火山号：574454973"
        android:textColor="#5a5a5a"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_up"
        android:background="@drawable/circle_conner_share_background"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="#5a5a5a"
        android:textSize="17dp" />

</RelativeLayout>