<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="74dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/act_chat_iv_back"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:tint="#2a2a2a"
                android:src="@mipmap/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="浙江卫视"
                android:textStyle="bold"
                android:textSize="16dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/vip"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="#d2d2d2"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2" />

        <EditText
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@+id/act_chat_iv_image"
            android:layout_marginLeft="12dp"
            android:background="@drawable/chat_edit_background"
            android:layout_width="match_parent"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:maxHeight="100dp"
            android:hint="发消息..."
            android:paddingLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="@dimen/dp_10"
            />

        <ImageView
            android:paddingLeft="12dp"
            android:id="@+id/act_chat_iv_image"
           android:layout_toLeftOf="@+id/act_chat_tv_send"
            android:src="@mipmap/image"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/act_chat_tv_send"
            android:textSize="16dp"
            android:textColor="#ff4d36"
            android:text="发送"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</FrameLayout>